{
    "debug": false,
    "storage": {
        "data_dir": "./data",
        "page_size": 4096,
        "max_segment_size": 536870912,
        "event_buffer_size": 16777216,
        "write_batch_size": 500
    },
    "index": {
        "index_dir": "./data/indexes",
        "initialization_mode": "standard",
        "cache": {
            "dynamic_allocation": true,
            "total_cache_mb": 2000,
            "min_cache_per_index_mb": 50,
            "reallocation_interval_minutes": 10,
            "eviction_policy": "lru",
            "cache_concurrency": 16
        },
        "flush_interval_ms": 100,
        "dirty_threshold": 128
    },
    "wal": {
        "disabled": false,
        "wal_dir": "./data/wal",
        "sync_mode": "batch",
        "batch_interval_ms": 100,
        "batch_size_bytes": 10485760,
        "max_segment_size": 1073741824,
        "checkpoint_interval_ms": 30000,
        "checkpoint_event_count": 5000
    },
    "compaction": {
        "enabled": true,
        "fragmentation_threshold": 0.2,
        "compaction_interval_ms": 60000,
        "max_concurrent_compactions": 2,
        "preserve_old_segments": false
    }
}